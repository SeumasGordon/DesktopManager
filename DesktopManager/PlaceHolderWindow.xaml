<Window x:Class="DesktopManager.PlaceHolderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopManager"
        mc:Ignorable="d"
        Title="PlaceHolderWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="PLACE HOLDER | NOT FINISHED | WIP" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="40" Background="Red"/>
        <Button Content="CLOSE" Grid.Column="0" Grid.Row="1" Background="PaleVioletRed" Click="Button_Click"/>
    </Grid>
</Window>
