<Window x:Class="DesktopManager.DriveWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopManager"
        mc:Ignorable="d"
        Title="DriveWindow" Height="768" Width="1366">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="75"/>
                <ColumnDefinition Width="75"/>
                <ColumnDefinition Width="75"/>
                <ColumnDefinition Width="75"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Border BorderBrush="Black" BorderThickness="1" Grid.ColumnSpan="5"/>
            <Button Content="Home" Grid.Column="0" Click="Button_Click" Background="White"/>
            <Button Content="Settings" Grid.Column="1" Click="Button_Click_1" Background="White"/>
            <Button Content="Help" Grid.Column="2" Click="Button_Click_2" Background="White"/>
            <Button Content="Disk" Grid.Column="3" Background="White" IsEnabled="False"/>
        </Grid>

        <ListBox ItemsSource="{Binding DriveItems}"
                 VerticalAlignment="Top"
                 Grid.Row="1"
                 SelectionChanged="ListBox_SelectionChanged"
                 HorizontalAlignment="Stretch">
            <ListBox.DataContext>
                <local:Viewer/>
            </ListBox.DataContext>
            <ListBox.Template>
                <ControlTemplate>
                    <DockPanel LastChildFill="True">
                        <ScrollViewer>
                            <ItemsPresenter/>
                        </ScrollViewer>
                    </DockPanel>
                </ControlTemplate>
            </ListBox.Template>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="0,1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="60*"/>
                            <ColumnDefinition Width="40*"/>
                            <ColumnDefinition Width="60*"/>
                            <ColumnDefinition Width="60*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="{Binding DriveName}" Grid.Column="0"/>
                        <TextBlock Text="{Binding DriveTotalSpace}" Grid.Column="1"/>
                        <TextBlock Text="{Binding DriveSpace}" Grid.Column="2"/>
                        <TextBlock Text="{Binding DriveFormat}" Grid.Column="3"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
